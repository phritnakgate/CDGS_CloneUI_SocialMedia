<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/bgColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/login_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/login_title"
        android:layout_marginTop="100sp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"
        >

        <TextView
            android:id="@+id/login_descEmailPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login to your account"
            android:textColor="@color/disabledColor"
            android:textSize="16sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/login_emailInput"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="15sp"
            android:hint="Email"
            android:textSize="16sp"
            android:background="@drawable/login_form_border"
            />
        <EditText
            android:id="@+id/login_passwordInput"
            android:layout_width="match_parent"
            android:layout_marginTop="20sp"
            android:layout_height="60sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:background="@drawable/login_form_border"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_signInBtn"
            android:textColor="@color/white"
            android:layout_marginTop="20sp"
            android:background="@drawable/ripple_effect_login_email"
            android:layout_width="match_parent"
            android:layout_height="50sp" >

            <TextView
                android:id="@+id/login_signInBtnText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="Sign In"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/login_descSocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Or sign in with -"
        android:textColor="@color/disabledColor"
        android:textSize="14sp"
        android:layout_marginTop="100sp"
        app:layout_constraintTop_toBottomOf="@+id/login_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/login_descSocial"
        android:layout_marginTop="10dp"
        >

        <include
            android:id="@+id/login_googleBtn"
            layout="@layout/login_social_btn" />
        <include
            android:id="@+id/login_facebookBtn"
            layout="@layout/login_social_btn" />
        <include
            android:id="@+id/login_xBtn"
            layout="@layout/login_social_btn" />
        <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flow_horizontalStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:constraint_referenced_ids="login_googleBtn,login_facebookBtn,login_xBtn"
            app:layout_constraintTop_toTopOf="parent"
            >
        </androidx.constraintlayout.helper.widget.Flow>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/login_signUpArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="25sp"

        >
        <TextView
            android:id="@+id/login_signUpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="@color/disabledColor"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/login_signUpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:text="Sign up"
            android:background="@drawable/ripple_effect_signup"
            android:textColor="@color/secondaryColor"
            android:textSize="14sp"
            android:textStyle="bold"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>