<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout_profile_bottomdrawer_editprofile_capture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/view_profile_bottomdrawer_editprofile_capture_divider"
            app:layout_constraintStart_toStartOf="parent"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/compatimageview_profile_bottomdrawer_editprofile_capture"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="@color/black"
                app:srcCompat="@drawable/camera_capture"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textview_profile_bottomdrawer_editprofile_capture"
                />
            <TextView
                android:id="@+id/textview_profile_bottomdrawer_editprofile_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_drawer_editprofile_capture"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/compatimageview_profile_bottomdrawer_editprofile_capture"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_profile_bottomdrawer_editprofile_capture_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/disabledColorA30"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout_profile_bottomdrawer_editprofile_capture"
        app:layout_constraintBottom_toTopOf="@+id/constraintlayout_profile_bottomdrawer_editprofile_gallery"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_profile_bottomdrawer_editprofile_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@+id/view_profile_bottomdrawer_editprofile_capture_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/compatimageview_profile_bottomdrawer_editprofile_gallery"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/black"
            app:srcCompat="@drawable/camera_gallery"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textview_profile_bottomdrawer_editprofile_gallery"
            />
        <TextView
            android:id="@+id/textview_profile_bottomdrawer_editprofile_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_drawer_editprofile_gallery"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/compatimageview_profile_bottomdrawer_editprofile_gallery"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>