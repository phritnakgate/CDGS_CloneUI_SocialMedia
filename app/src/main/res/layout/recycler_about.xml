<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_aboutList">
    
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_aboutCardIconLayout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/profile_about_ic_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/profile_aboutCardIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tint="@color/primaryColor"
            app:srcCompat="@drawable/ic_launcher_foreground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profile_aboutCardIconLayout"
        app:layout_constraintEnd_toStartOf="@+id/profile_aboutCardEdit"
        >
        <TextView
            android:id="@+id/profile_aboutCardTitle"
            android:text="xxxxxx"
            android:textSize="14sp"
            android:textColor="@color/disabledColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/profile_aboutCardDesc"
            android:text="xxxxxx"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/profile_aboutCardEdit"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:tint="@color/disabledColor"
        app:srcCompat="@drawable/about_edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>